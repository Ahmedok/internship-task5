{
    "compilerOptions": {
        "target": "ES2024",
        "module": "NodeNext",
        "lib": ["ES2024"],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "NodeNext"
    },
    "include": ["."],
    "exclude": ["node_modules", "dist"],
    "references": [{ "path": "../lib" }]
}
